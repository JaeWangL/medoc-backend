{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strictPropertyInitialization": false,
    "target": "es6",
    "lib": ["es7"],
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "strict": true,
    "esModuleInterop": true, // for using third-party libraries (moment, ...)
    "paths": {
      "@common/*": ["./src/common/*"],
      "@configs/*": ["./src/configs/*"],
      "@infrastructure/*": ["./src/infrastructure/*"],
      "@modules/*": ["./src/modules/*"],
      "@notifications/*": ["./src/notifications/*"],
      "@shared/*": ["./src/shared/*"]
    }
  }
}
